<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
  <addon id="repository.psikon" name="Psikon Repo" version="1.0.0" provider-name="Psikon">
    <extension point="xbmc.addon.repository" name="Psikon Repo">
    <info>https://github.com/v0idnull/xbmc/raw/master/addons.xml</info>
    <checksum>https://github.com/v0idnull/xbmc/raw/master/addons.xml.md5</checksum>
    <datadir zip="true">https://github.com/v0idnull/xbmc/raw/master/repo</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
    <summary lang="en">Psikon Repo</summary>
	<description lang="en">A collection of useful plugins for XBMC.</description>
	<disclaimer lang="en">No promises ;)</disclaimer>
	<platform>all</platform>
    </extension>
  </addon>

<addon id="service.psikon.bgmusic"
       name="Psikon BG Music"
      version="0.0.7"
      provider-name="Psikon">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
    </requires>
    <extension point="xbmc.service" library="default.py" start="login"/>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">
			Service that will play music of your choosing when idle.
		</summary>
		<description lang="en">
			Service that will play music of your choosing when idle. This is not quite the same as some skins who have a "play playlist at start up feature". This service check every two seconds whether or not there is an active player. If there isn't, then it will play the configured media.
		</description>
        <platform>all</platform>
        <website>http://psikon.com</website>
        <email>v0idnull@psikon.com</email>
    </extension>
</addon>
</addons>
